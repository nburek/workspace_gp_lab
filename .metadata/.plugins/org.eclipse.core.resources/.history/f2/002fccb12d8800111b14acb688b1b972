#ifndef ___WIDGET___
#define ___WIDGET___

#include "xbasic_types.h"
#include "xuartlite_l.h"
#include "xparameters.h"

#include "packet.h"

#define NFUNCS 16

struct widget;
void Widget_move(struct widget* this, u16 x_s, u16 y_s);
//Packet Widget_runFunction(struct widget* this, u8 funcN, Packet* pack);


struct widget{
	u16 x, y;
	Packet (*funcTable[NFUNCS])(Packet*);

	void (*render) (struct widget* this);
	void (*move) (struct widget* this, u16 x_s, u16 y_s);
//	Packet (*runFunction) (struct widget* this, u8 funcN, Packet* pack);

}Widget ={
	.x = 0,
	.y = 0,
	.move = Widget_move
//	.runFunction = Widget_runFunction
};

void Widget_move(struct widget* this, u16 x_s, u16 y_s){
	this->x = x_s;
	this->y = y_s;
}

/*Packet Widget_runFunction(struct widget* this, u8 funcN, Packet* pack){
	return this->funcTable[funcN](pack);
}*/

#endif
