#ifndef LIGHT_H_
#define LIGHT_H_

#include<stdlib.h>
#include "widget.h"
#include "Graphics.h"

Packet LED_runFunction(Widget* wthis, u8 funcN, Packet* pack);

typedef struct led_widget {
	u16 radius;
	u8	color, filled;
} LEDWidget;

struct widget new_LEDWidget(u32 x_i, u32 y_i, u16 radius_i, u8 color_i, u8 filled_i){

	LEDWidget* w = (LEDWidget*) malloc(sizeof(LEDWidget));
	w->radius = radius_i;
	w->color  = color_i
	w->filled = filled_i;

	struct widget Dial ={
			.x = x_i,
			.y = y_i,
			.derive = (const void*)w,
			.runFunction = DIAL_runFunction
	};

	return Dial;
}


Packet DIAL_runFunction(Widget* base, u8 funcN, Packet* pack){

	struct dial_widget* derive = (struct dial_widget*)(base->derive);

	switch(funcN){

		case 1:{
			drawCircle(lightsX+30+base->x,lightsY+base->y, derive->radius, derive->color, derive->filled);
		}
		case 2:{

		}
	}

}

#endif /* LIGHT_H_ */
