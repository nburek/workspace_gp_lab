			int deltaX = 5*cos(angle + (3.14/2));
			int deltaY = -5*sin(angle + (3.14/2));
			drawTriangle(x2, y2, (x+deltaX),(y+deltaY),(x-deltaX),(y-deltaY),BLUE, 1);
