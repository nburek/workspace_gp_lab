#ifndef PBAR_H_
#define PBAR_H_



Packet DIAL_runFunction(const void* wthis, u8 funcN, Packet* pack);

struct dial_widget {
	u32 circleX, circleY;
}Dial_ctor = {
	.circleX = 0,
	.circleY = 0
};

struct widget Dial = {
		.x = 0,
		.y = 0,
		.derive = &Dial_ctor,
		.runFunction = DIAL_runFunction
};

Packet DIAL_runFunction(const void* _this, u8 funcN, Packet* pack){

	struct dial_widget* this = (struct dial_widget*)_this;

	switch(funcN){

		case 1:{
			//stuff to draw a progress bar here
			drawCircle(progressBarX,progressBarY,15,BLACK,1);
			drawCircle(progressBarX+200,progressBarY,15,BLACK,1);
			drawRectangle(progressBarX,progressBarY-15,progressBarX+200,progressBarY+15,BLACK,1);
			drawCircle(progressBarX,progressBarY,13,GREEN,1);
			drawDigit(progressBarX-4,progressBarY+17,0,BLACK);
			drawNumber(progressBarX+188,progressBarY+17,100,BLACK);
		}
		case 2:{

		}
	}

}


#endif /* PBAR_H_ */
